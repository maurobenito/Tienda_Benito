@model Tienda_Benito.Models.Ventum

@{
    ViewData["Title"] = "Eliminar Venta";
}

<h1>Eliminar Venta</h1>

<h3>¿Estás seguro que deseas eliminar esta venta?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.Fecha</dd>

        <dt class="col-sm-2">Total</dt>
        <dd class="col-sm-10">@Model.Total</dd>

        <dt class="col-sm-2">Tipo Venta</dt>
        <dd class="col-sm-10">@Model.TipoVenta</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="VentaId" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
