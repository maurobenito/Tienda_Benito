@model Tienda_Benito.Models.Ventum

@{
    ViewData["Title"] = "Detalle de Venta";
}

<h1>Detalle de Venta</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.Fecha</dd>

        <dt class="col-sm-2">Total</dt>
        <dd class="col-sm-10">@Model.Total.ToString("C")</dd>

        <dt class="col-sm-2">Tipo Venta</dt>
        <dd class="col-sm-10">@Model.TipoVenta</dd>

        <dt class="col-sm-2">Usuario</dt>
        <dd class="col-sm-10">@Model.Usuario?.Email</dd>

        <dt class="col-sm-2">Cliente</dt>
        <dd class="col-sm-10">@Model.Cliente?.Nombre/dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.VentaId" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</p>
