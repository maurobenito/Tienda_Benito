@model Tienda_Benito.Models.Ventadetalle

@{
    ViewData["Title"] = "Eliminar Detalle";
}

<h1>Eliminar</h1>

<h3>¿Estás seguro que querés eliminar este detalle?</h3>
<div>
    <h4>Venta Detalle</h4>
    <dl class="row">
        <dt class="col-sm-2">Venta</dt>
        <dd class="col-sm-10">@Model.VentaId</dd>

        <dt class="col-sm-2">Producto</dt>
        <dd class="col-sm-10">@Model.Producto?.Nombre</dd>

        <dt class="col-sm-2">Cantidad</dt>
        <dd class="col-sm-10">@Model.Cantidad</dd>

        <dt class="col-sm-2">Precio Unitario</dt>
        <dd class="col-sm-10">@Model.PrecioUnitario.ToString("C")</dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="VentaDetalleId" />
        <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
