@model Tienda_Benito.Models.Proveedor

@{
    ViewData["Title"] = "Eliminar Proveedor";
}

<h1>Eliminar Proveedor</h1>

<h3>¿Estás seguro de que deseas eliminar este proveedor?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-3">Nombre</dt>
        <dd class="col-sm-9">@Model.Nombre</dd>

        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Teléfono</dt>
        <dd class="col-sm-9">@Model.Telefono</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="ProveedorId" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
