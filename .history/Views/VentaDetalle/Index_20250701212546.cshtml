@model IEnumerable<Tienda_Benito.Models.Ventadetalle>

@{
    ViewData["Title"] = "Venta Detalles";
}

<h1>Venta Detalles</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear nuevo</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Venta</th>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Precio Unitario</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
    <tr>
        <td>@item.VentaId</td>
        <td>@item.Producto?.Nombre</td>
        <td>@item.Cantidad</td>
        <td>@item.PrecioUnitario.ToString("C")</td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.VentaDetalleId">Editar</a> |
            <a asp-action="Details" asp-route-id="@item.VentaDetalleId">Detalles</a> |
            <a asp-action="Delete" asp-route-id="@item.VentaDetalleId">Eliminar</a>
        </td>
    </tr>
}
    </tbody>
</table>
