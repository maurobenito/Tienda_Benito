@model IEnumerable<Tienda_Benito.Models.Proveedor>

@{
    ViewData["Title"] = "Proveedores";

    var paginaActual = ViewBag.PaginaActual as int? ?? 1;
    var tamanoPagina = ViewBag.TamanoPagina as int? ?? 5;
    var totalPaginas = ViewBag.TotalPaginas as int? ?? 1;
    var filtro = ViewBag.Filtro as string ?? "";
    var ordenActual = ViewBag.OrderBy as string ?? "nombre_desc";
    var desc = ViewBag.Desc as bool? ?? true;

    string OrdenLink(string campo)
    {
        if (ordenActual == campo)
            return campo + "_desc";
        if (ordenActual == campo + "_desc")
            return campo;
        return campo + "_desc";
    }
}

<h1 class="mb-4">üöö Proveedores</h1>

<p>
    <a asp-action="Create" class="btn btn-success mb-3">
        <i class="fas fa-plus"></i> Nuevo Proveedor
    </a>
</p>

<form method="get" class="mb-3">
    <div class="form-row">
        <div class="col">
            <input name="filtro" value="@filtro" class="form-control" placeholder="üîç Buscar por nombre, raz√≥n social o email" />
        </div>
        <div class="col-auto">
            <select name="tamPagina" class="form-control" onchange="this.form.submit()">
                <option value="5" selected="@(tamanoPagina == 5)">5</option>
                <option value="10" selected="@(tamanoPagina == 10)">10</option>
                <option value="15" selected="@(tamanoPagina == 15)">15</option>
            </select>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Filtrar</button>
        </div>
    </div>
</form>

<table class="table table-hover table-bordered shadow-sm">
    <thead class="thead-dark">
        <tr>
            <th>
                <a asp-action="Index" asp-route-orderBy="@OrdenLink("nombre")" asp-route-filtro="@filtro" asp-route-tamPagina="@tamanoPagina">
                    Nombre @if (ordenActual.Contains("nombre")) { <i class="bi @(ordenActual.EndsWith("_desc") ? "bi-caret-down-fill" : "bi-caret-up-fill")"></i> }
                </a>
            </th>
            <th>Email</th>
            <th>Tel√©fono</th>
            <th>CUIT</th>
            <th>Raz√≥n Social</th>
            <th>Archivos</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var proveedor in Model)
        {
            <tr>
                <td>@proveedor.Nombre</td>
                <td>@proveedor.Email</td>
                <td>@proveedor.Telefono</td>
                <td>@proveedor.Cuit</td>
                <td>@proveedor.RazonSocial</td>
                <td>
                    @if (!string.IsNullOrEmpty(proveedor.Archivo1))
                    {
                        <a class="btn btn-sm btn-outline-secondary mb-1" target="_blank" href="~/uploads/@proveedor.Archivo1">Archivo 1</a><br />
                    }
                    @if (!string.IsNullOrEmpty(proveedor.Archivo2))
                    {
                        <a class="btn btn-sm btn-outline-secondary" target="_blank" href="~/uploads/@proveedor.Archivo2">Archivo 2</a>
                    }
                </td>
                <td class="text-center text-nowrap">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@proveedor.ProveedorId">‚úèÔ∏è</a>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@proveedor.ProveedorId">üëÅÔ∏è</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@proveedor.ProveedorId">üóëÔ∏è</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (totalPaginas > 1)
{
    <nav>
        <ul class="pagination justify-content-center">
            <li class="page-item @(paginaActual == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { pagina = 1, tamPagina = tamanoPagina, filtro, orderBy = ordenActual, desc })">¬´</a>
            </li>
            <li class="page-item @(paginaActual == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { pagina = paginaActual - 1, tamPagina = tamanoPagina, filtro, orderBy = ordenActual, desc })">‚Äπ</a>
            </li>
            @for (int i = Math.Max(1, paginaActual - 2); i <= Math.Min(totalPaginas, paginaActual + 2); i++)
            {
                <li class="page-item @(i == paginaActual ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { pagina = i, tamPagina = tamanoPagina, filtro, orderBy = ordenActual, desc })">@i</a>
                </li>
            }
            <li class="page-item @(paginaActual == totalPaginas ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { pagina = paginaActual + 1, tamPagina = tamanoPagina, filtro, orderBy = ordenActual, desc })">‚Ä∫</a>
            </li>
            <li class="page-item @(paginaActual == totalPaginas ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { pagina = totalPaginas, tamPagina = tamanoPagina, filtro, orderBy = ordenActual, desc })">¬ª</a>
            </li>
        </ul>
    </nav>
}
