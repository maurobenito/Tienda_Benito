@model Tienda_Benito.Models.Proveedor
@{
    ViewData["Title"] = "Editar Proveedor";
}
<h2>Editar Proveedor</h2>

<form asp-action="Edit" enctype="multipart/form-data" class="p-4 bg-light rounded shadow">
    <input type="hidden" asp-for="ProveedorId" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Igual que Create -->
    @Html.Partial("_ProveedorForm", Model)

    <div class="form-group">
        <label>Archivo 1 actual:</label><br />
        @if (!string.IsNullOrEmpty(Model.Archivo1))
        {
            <a href="@Url.Content("~/uploads/" + Model.Archivo1)" target="_blank">@Model.Archivo1</a>
        }
    </div>
    <div class="form-group">
        <label>Archivo 2 actual:</label><br />
        @if (!string.IsNullOrEmpty(Model.Archivo2))
        {
            <a href="@Url.Content("~/uploads/" + Model.Archivo2)" target="_blank">@Model.Archivo2</a>
        }
    </div>

    <div class="form-group">
        <label>Nuevo Archivo 1</label>
        <input type="file" name="Archivo1File" class="form-control-file" />
    </div>
    <div class="form-group">
        <label>Nuevo Archivo 2</label>
        <input type="file" name="Archivo2File" class="form-control-file" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</form>
