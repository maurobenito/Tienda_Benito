@model IEnumerable<Tienda_Benito.Models.Usuario>

@{
    ViewData["Title"] = "Usuarios";

    var paginaActual = ViewBag.PaginaActual as int? ?? 1;
    var tamanoPagina = ViewBag.TamanoPagina as int? ?? 5;
    var totalPaginas = ViewBag.TotalPaginas as int? ?? 1;
    var filtro = ViewBag.Filtro as string ?? "";
    var ordenActual = ViewBag.OrderBy as string ?? "Nombre";
    var desc = ViewBag.Desc as bool? ?? false;

    string OrdenLink(string campo)
    {
        return ordenActual == campo ? campo + (desc ? "" : "_desc") :
               ordenActual == campo + "_desc" ? campo : campo + "_desc";
    }
}

<h1 class="mb-4">üë§ Usuarios</h1>

<p>
    <a asp-action="Create" class="btn btn-success mb-3">
        <i class="fas fa-plus"></i> Nuevo Usuario
    </a>
</p>

<form method="get" class="mb-3">
    <div class="form-row">
        <div class="col">
            <input name="filtro" value="@filtro" class="form-control" placeholder="üîç Buscar por nombre, apellido o email" />
        </div>
        <div class="col-auto">
            <select name="tamPagina" class="form-control" onchange="this.form.submit()">
                <option value="5" selected="@(tamanoPagina == 5)">5 por p√°gina</option>
                <option value="10" selected="@(tamanoPagina == 10)">10 por p√°gina</option>
                <option value="15" selected="@(tamanoPagina == 15)">15 por p√°gina</option>
            </select>
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Filtrar</button>
        </div>
    </div>
</form>

<table class="table table-hover table-bordered table-striped shadow-sm">
    <thead class="thead-dark text-center">
        <tr>
            <th>
                <a class="text-dark text-decoration-none" asp-action="Index" asp-route-orderBy="@OrdenLink("Nombre")" asp-route-filtro="@filtro" asp-route-tamPagina="@tamanoPagina" asp-route-pagina="1">
                    Nombre
                    @if (ordenActual.Contains("Nombre"))
                    {
                        <i class="bi @(ordenActual.EndsWith("_desc") ? "bi-caret-down-fill" : "bi-caret-up-fill")"></i>
                    }
                </a>
            </th>
            <th>Apellido</th>
            <th>Email</th>
            <th>Rol</th>
            <th>Avatar</th>
            <th class="text-nowrap">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>@usuario.Nombre</td>
                <td>@usuario.Apellido</td>
                <td>@usuario.Email</td>
                <td>@(usuario.Rol == "Empleado" ? "Vendedor" : usuario.Rol)</td>

                <td>
                    @if (!string.IsNullOrWhiteSpace(usuario.Avatar))
                    {
                        <img src="@Url.Content("~/uploads/" + usuario.Avatar)" alt="Avatar" width="50" class="rounded" />
                    }
                </td>
                <td class="text-center text-nowrap">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@usuario.UsuarioId" title="Editar">‚úèÔ∏è</a>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@usuario.UsuarioId" title="Detalles">üëÅÔ∏è</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@usuario.UsuarioId" title="Eliminar" onclick="return confirm('¬øEst√° seguro que desea eliminar este usuario?');">üóëÔ∏è</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (totalPaginas > 1)
{
    <nav>
        <ul class="pagination justify-content-center">
            <li class="page-item @(paginaActual == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { pagina = 1, tamPagina = tamanoPagina, filtro, orderBy = ordenActual, desc })">¬´</a>
            </li>
            <li class="page-item @(paginaActual == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { pagina = paginaActual - 1, tamPagina = tamanoPagina, filtro, orderBy = ordenActual, desc })">‚Äπ</a>
            </li>
            @for (int i = Math.Max(1, paginaActual - 2); i <= Math.Min(totalPaginas, paginaActual + 2); i++)
            {
                <li class="page-item @(i == paginaActual ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { pagina = i, tamPagina = tamanoPagina, filtro, orderBy = ordenActual, desc })">@i</a>
                </li>
            }
            <li class="page-item @(paginaActual == totalPaginas ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { pagina = paginaActual + 1, tamPagina = tamanoPagina, filtro, orderBy = ordenActual, desc })">‚Ä∫</a>
            </li>
            <li class="page-item @(paginaActual == totalPaginas ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { pagina = totalPaginas, tamPagina = tamanoPagina, filtro, orderBy = ordenActual, desc })">¬ª</a>
            </li>
        </ul>
    </nav>
}
