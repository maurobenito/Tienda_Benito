@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login - Tienda Benito</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <style>
        body {
            background-image: url('/uploads/fondo-login.jpg'); /* Asegurate de tener esta imagen */
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            height: 100vh;
        }

        .login-container {
            background-color: rgba(255, 255, 255, 0.95);
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0,0,0,0.2);
        }

        .login-title {
            font-weight: bold;
            font-size: 2rem;
            margin-bottom: 1rem;
        }

        .extra-links a {
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="container h-100 d-flex align-items-center justify-content-center">
        <div class="col-md-5 login-container">
            <div class="text-center login-title">ðŸ›’ Tienda Benito</div>

            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title text-center mb-4">Iniciar sesiÃ³n</h5>

                    <form asp-action="Login" method="post">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input name="email" type="email" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">ContraseÃ±a</label>
                            <input name="password" type="password" class="form-control" required />
