@model IEnumerable<Tienda_Benito.Models.Cliente>
@{
    ViewData["Title"] = "Clientes";
}

<h2 class="mb-4">Clientes</h2>

<a asp-action="Create" class="btn btn-success mb-3">➕ Nuevo Cliente</a>

<table class="table table-hover table-bordered shadow-sm">
    <thead class="thead-dark">
        <tr>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Email</th>
            <th>Teléfono</th>
            <th>CUIT</th>
            <th>Archivo</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Nombre</td>
                <td>@cliente.Apellido</td>
                <td>@cliente.Email</td>
                <td>@cliente.Telefono</td>
                <td>@cliente.Cuit</td>
                <td>
                    @if (!string.IsNullOrEmpty(cliente.ArchivoAdjunto))
                    {
                        <a class="btn btn-sm btn-outline-secondary" target="_blank" href="~/uploads/@cliente.ArchivoAdjunto">Ver</a>
                    }
                </td>
                <td class="text-center">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@cliente.ClienteId">✏️</a>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@cliente.ClienteId">👁️</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@cliente.ClienteId">🗑️</a>
                </td>
            </tr>
        }
    </tbody>
</table>
