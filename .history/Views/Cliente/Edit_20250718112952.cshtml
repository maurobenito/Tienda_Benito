@model Tienda_Benito.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
}

<h2 class="mb-4">Editar Cliente</h2>

<form asp-action="Edit" enctype="multipart/form-data" class="shadow p-4 rounded bg-light">
    <input type="hidden" asp-for="ClienteId" />

    <div class="row">
        <div class="col-md-6">
            <div class="form-group mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Apellido" class="form-label"></label>
                <input asp-for="Apellido" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Telefono" class="form-label"></label>
                <input asp-for="Telefono" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Direccion" class="form-label"></label>
                <input asp-for="Direccion" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="CondFiscal" class="form-label"></label>
                <input asp-for="CondFiscal" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Cuit" class="form-label"></label>
                <input asp-for="Cuit" class="form-control" />
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group mb-3">
                <label class="form-label">DNI / Archivo Adjunto (PDF)</label>
                @if (!string.IsNullOrEmpty(Model.ArchivoAdjunto))
                {
                    <p>
                        <a href="~/uploads/@Model.ArchivoAdjunto" target="_blank">Ver archivo actual</a>
                    </p>
                }
                <input asp-for="ArchivoSubido" type="file" class="form-control" accept=".pdf" />
            </div>

            <div class="form-group mb-3">
                <label class="form-label">Foto de Perfil</label>
                @if (!string.IsNullOrEmpty(Model.FotoPerfil))
                {
                    <div class="mb-2">
                        <img src="~/uploads/@Model.FotoPerfil" class="img-thumbnail" style="max-height: 150px;" />
                    </div>
                }
                <input asp-for="ImagenSubida" type="file" class="form-control" accept="image/*" />
            </div>
        </div>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-success">Guardar cambios</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
