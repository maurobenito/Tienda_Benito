@model Tienda_Benito.Models.Cliente

@{
    ViewData["Title"] = "Detalles del Cliente";
}

<h2 class="mb-4">Detalles del Cliente</h2>

<div class="card shadow p-4">
    <div class="row">
        <div class="col-md-4 text-center">
            @if (!string.IsNullOrEmpty(Model.FotoPerfil))
            {
                <img src="@Url.Content("~/uploads/clientes/" + Model.FotoPerfil)" class="img-thumbnail mb-3" style="max-width: 100%; height: auto;" alt="Foto de perfil" />
            }
            else
            {
                <div class="border rounded p-5 bg-light text-muted">Sin foto de perfil</div>
            }

            @if (!string.IsNullOrEmpty(Model.ArchivoAdjunto))
            {
                <a class="btn btn-sm btn-outline-primary mt-3" 
                   href="@Url.Content("~/uploads/clientes/" + Model.ArchivoAdjunto)" 
                   target="_blank">
                    Ver/Descargar DNI
                </a>
            }
        </div>

        <div class="col-md-8">
            <dl class="row">
                <dt class="col-sm-4">Nombre</dt>
                <dd class="col-sm-8">@Model.Nombre</dd>

                <dt class="col-sm-4">Apellido</dt>
                <dd class="col-sm-8">@Model.Apellido</dd>

                <dt class="col-sm-4">Email</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                <dt class="col-sm-4">Teléfono</dt>
                <dd class="col-sm-8">@Model.Telefono</dd>

                <dt class="col-sm-4">CUIT</dt>
                <dd class="col-sm-8">@Model.Cuit</dd>

                <dt class="col-sm-4">Condición Fiscal</dt>
                <dd class="col-sm-8">@Model.CondFiscal</dd>

                <dt class="col-sm-4">Dirección</dt>
                <dd class="col-sm-8">@Model.Direccion</dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.ClienteId" class="btn btn-warning">Editar</a>
        <a asp-action="Index" class="btn btn-secondary ml-2">Volver</a>
    </div>
</div>
