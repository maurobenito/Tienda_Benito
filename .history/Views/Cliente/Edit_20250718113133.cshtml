@model Tienda_Benito.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
}

<h1>Editar Cliente</h1>

<form asp-action="Edit" enctype="multipart/form-data" class="shadow p-4 rounded bg-light">
    <input type="hidden" asp-for="ClienteId" />

    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Apellido"></label>
        <input asp-for="Apellido" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Telefono"></label>
        <input asp-for="Telefono" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Direccion"></label>
        <input asp-for="Direccion" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CondFiscal"></label>
        <input asp-for="CondFiscal" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Cuit"></label>
        <input asp-for="Cuit" class="form-control" />
    </div>

    <div class="form-group">
        <label>Adjuntar DNI (PDF o imagen)</label>
        <input asp-for="ArchivoSubido" type="file" class="form-control-file" />
        @if (!string.IsNullOrEmpty(Model.ArchivoAdjunto))
        {
            <p class="mt-2">Archivo actual: <a href="@Url.Content("~/uploads/" + Model.ArchivoAdjunto)" target="_blank">Ver archivo</a></p>
        }
    </div>

    <div class="form-group">
        <label>Foto de perfil</label>
        <input asp-for="ImagenSubida" type="file" class="form-control-file" />
        @if (!string.IsNullOrEmpty(Model.FotoPerfil))
        {
            <p class="mt-2">
                <img src="@Url.Content("~/uploads/" + Model.FotoPerfil)" alt="Foto perfil" width="100" class="img-thumbnail" />
            </p>
        }
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
