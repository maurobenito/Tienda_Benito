@model Tienda_Benito.Models.Cliente

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<h1>Eliminar</h1>

<h3>¿Estás seguro de que deseas eliminar este cliente?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Apellido</dt>
        <dd class="col-sm-10">@Model.Apellido</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">CUIT</dt>
        <dd class="col-sm-10">@Model.Cuit</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="ClienteId" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
