@model IEnumerable<Tienda_Benito.Models.Cliente>
@{
    ViewData["Title"] = "Clientes";
}

<h2 class="mb-4">📋 Clientes</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-action="Create" class="btn btn-success shadow">➕ Nuevo Cliente</a>
</div>

<table class="table table-bordered table-striped table-hover shadow-sm">
    <thead class="thead-dark">
        <tr>
            <th>Avatar</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Email</th>
            <th>Teléfono</th>
            <th>CUIT</th>
            <th>Archivo DNI</th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(cliente.FotoPerfil))
                    {
                        <img src="~/uploads/@cliente.FotoPerfil" alt="Avatar" class="rounded-circle" style="width: 50px; height: 50px; object-fit: cover;" />
                    }
                </td>
                <td>@cliente.Nombre</td>
                <td>@cliente.Apellido</td>
                <td>@cliente.Email</td>
                <td>@cliente.Telefono</td>
                <td>@cliente.Cuit</td>
                <td>
                    @if (!string.IsNullOrEmpty(cliente.ArchivoAdjunto))
                    {
                        <a class="btn btn-sm btn-outline-secondary" target="_blank" href="~/uploads/@cliente.ArchivoAdjunto">📎 Ver PDF</a>
                    }
                </td>
                <td class="text-center">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@cliente.ClienteId">✏️</a>
                    <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@cliente.ClienteId">👁️</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@cliente.ClienteId">🗑️</a>
                </td>
            </tr>
        }
    </tbody>
</table>
