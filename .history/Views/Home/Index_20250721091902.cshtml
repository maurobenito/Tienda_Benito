@{
    ViewData["Title"] = "Inicio - Tienda Benito";
}

<div class="container py-5">
    <h1 class="mb-4 text-center">Bienvenido a Tienda Benito</h1>

    <p class="lead text-center mb-5">
        Selecciona una opción para comenzar a gestionar tu tienda.
    </p>

    <div class="row justify-content-center g-4">
        <div class="col-12 col-md-6 col-lg-4">
            <a href="/Venta/Create" class="btn btn-primary btn-lg w-100 shadow-sm">
                <i class="bi bi-cart-plus-fill me-2"></i> Nueva Venta
            </a>
        </div>

        <div class="col-12 col-md-6 col-lg-4">
            <a href="/Cliente" class="btn btn-outline-primary btn-lg w-100 shadow-sm">
                <i class="bi bi-people-fill me-2"></i> Clientes
            </a>
        </div>

        <div class="col-12 col-md-6 col-lg-4">
            <a href="/Producto" class="btn btn-outline-primary btn-lg w-100 shadow-sm">
                <i class="bi bi-box-seam me-2"></i> Productos
            </a>
        </div>

        <div class="col-12 col-md-6 col-lg-4">
            <a href="/Proveedor" class="btn btn-outline-primary btn-lg w-100 shadow-sm">
                <i class="bi bi-truck me-2"></i> Proveedores
            </a>
        </div>

        <div class="col-12 col-md-6 col-lg-4">
            <a href="/Usuario" class="btn btn-outline-primary btn-lg w-100 shadow-sm">
                <i class="bi bi-person-badge-fill me-2"></i> Usuarios
            </a>
        </div>

        <div class="col-12 col-md-6 col-lg-4">
            <a href="/Home/Reportes" class="btn btn-outline-primary btn-lg w-100 shadow-sm">
                <i class="bi bi-bar-chart-fill me-2"></i> Reportes e Informes
            </a>
        </div>
    </div>
</div>
