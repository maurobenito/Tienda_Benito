@{
    ViewData["Title"] = "Inicio";
}

<div class="container py-5 text-center">
    <h1 class="display-4 mb-4 text-primary fw-bold">Bienvenido a Tienda Benito</h1>
    <p class="lead mb-5 text-muted">Gestioná tus ventas, productos y más desde este panel principal.</p>

    <div class="row row-cols-1 row-cols-md-2 g-4 justify-content-center">

        <div class="col">
            <a href="/Venta/VentaVue" class="btn btn-primary btn-lg w-100 shadow-lg p-3 rounded">
                🛒 Nueva Venta
            </a>
        </div>

        <div class="col">
            <a href="/Producto" class="btn btn-outline-secondary btn-lg w-100 shadow p-3 rounded">
                📦 Productos
            </a>
        </div>

        <div class="col">
            <a href="/Cliente" class="btn btn-outline-secondary btn-lg w-100 shadow p-3 rounded">
                👥 Clientes
            </a>
        </div>

        @if (User.IsInRole("Admin"))
        {
            <div class="col">
                <a href="/Proveedor" class="btn btn-outline-secondary btn-lg w-100 shadow p-3 rounded">
                    🏭 Proveedores
                </a>
            </div>

            <div class="col">
                <a href="/Home/Reportes" class="btn btn-outline-secondary btn-lg w-100 shadow p-3 rounded">
                    📊 Reportes
                </a>
            </div>

            <div class="col">
                <a href="/Usuario" class="btn btn-outline-secondary btn-lg w-100 shadow p-3 rounded">
                    🔐 Gestión de Usuarios
                </a>
            </div>
        }
    </div>

</div>
