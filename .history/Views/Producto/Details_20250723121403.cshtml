@model Tienda_Benito.Models.Producto
@{
    ViewData["Title"] = "Detalles del Producto";
}

<h2>Detalles del Producto</h2>

<div class="border rounded p-4 bg-light shadow-sm">
    <h4 class="mb-3 text-primary">🛒 Información del Producto</h4>
    <dl class="row">
        <dt class="col-sm-3">📦 Nombre</dt>
        <dd class="col-sm-9">@Model.Nombre</dd>

        <dt class="col-sm-3">📝 Descripción</dt>
        <dd class="col-sm-9">@Model.Descripcion</dd>

        <dt class="col-sm-3">💰 Precio Costo</dt>
        <dd class="col-sm-9">@Model.PrecioCosto.ToString("C")</dd>

        <dt class="col-sm-3">💸 Precio Venta</dt>
        <dd class="col-sm-9">@Model.PrecioVenta.ToString("C")</dd>

        <dt class="col-sm-3">📏 Unidad de Medida</dt>
        <dd class="col-sm-9">@Model.UnidadMedida</dd>

        @if (User.IsInRole("Administrador"))
        {
            <dt class="col-sm-3">🏭 Proveedor</dt>
            <dd class="col-sm-9">@Model.Proveedor?.Nombre</dd>
        }

        <dt class="col-sm-3">📂 Rubro</dt>
        <dd class="col-sm-9">@Model.Rubro?.Nombre</dd>

        <dt class="col-sm-3">📦 Stock</dt>
        <dd class="col-sm-9">@Model.Stock</dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.ProductoId" class="btn btn-warning">✏️ Editar</a>
    <a asp-action="Index" class="btn btn-secondary">🔙 Volver</a>
</div>
