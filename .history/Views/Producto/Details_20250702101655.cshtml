@model Tienda_Benito.Models.Producto

@{
    ViewData["Title"] = "Detalles del Producto";
}

<h2>Detalles del Producto</h2>

<div>
    <h4>Producto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.Nombre</dd>

        <dt class="col-sm-2">Descripci√≥n</dt>
        <dd class="col-sm-10">@Model.Descripcion</dd>

        <dt class="col-sm-2">Precio Costo</dt>
        <dd class="col-sm-10">@Model.PrecioCosto.ToString("C")</dd>

        <dt class="col-sm-2">Precio Venta</dt>
        <dd class="col-sm-10">@Model.PrecioVenta.ToString("C")</dd>

        <dt class="col-sm-2">Unidad de Medida</dt>
        <dd class="col-sm-10">@Model.UnidadMedida</dd>

        <dt class="col-sm-2">Proveedor</dt>
        <dd class="col-sm-10">@Model.Proveedor?.Nombre ?? "Sin asignar"</dd>

        <dt class="col-sm-2">Rubro</dt>
        <dd class="col-sm-10">@Model.Rubro?.Nombre ?? "Sin asignar"</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.ProductoId" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>
