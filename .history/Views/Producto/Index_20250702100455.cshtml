@model IEnumerable<Tienda_Benito.Models.Producto>

@{
    ViewData["Title"] = "Lista de Productos";
}

<h1>Productos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo Producto</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Descripci√≥n</th>
            <th>Precio Costo</th>
            <th>Precio Venta</th>
            <th>Unidad</th>
            <th>Rubro</th>
            <th>Proveedor</th>
            <th>Stock</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Nombre</td>
            <td>@item.Descripcion</td>
            <td>@item.PrecioCosto.ToString("C")</td>
            <td>@item.PrecioVenta.ToString("C")</td>
            <td>@item.UnidadMedida</td>
            <td>@item.Rubro?.Nombre</td>
            <td>@item.Proveedor?.Nombre</td>
            <td>@item.Stock</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductoId" class="btn btn-sm btn-warning">Editar</a>
                <a asp-action="Details" asp-route-id="@item.ProductoId" class="btn btn-sm btn-info">Detalles</a>
                <a asp-action="Delete" asp-route-id="@item.ProductoId" class="btn btn-sm btn-danger">Eliminar</a>
            </td>
        </tr>
    }
    </tbody>
</table>
