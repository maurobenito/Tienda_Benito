@model Tienda_Benito.Models.Ventum

@{
    ViewData["Title"] = "Nueva Venta";
}

<h1>Nueva Venta</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Fecha"></label>
        <input asp-for="Fecha" class="form-control" type="datetime-local" />
    </div>
    <div class="form-group">
        <label asp-for="Total"></label>
        <input asp-for="Total" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TipoVenta"></label>
        <input asp-for="TipoVenta" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="UsuarioId">Usuario</label>
        <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.Usuarios"></select>
    </div>
    <div class="form-group">
        <label asp-for="ClienteId">Cliente</label>
        <select asp-for="ClienteId" class="form-control" asp-items="ViewBag.Clientes"></select>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

