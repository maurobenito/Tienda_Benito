@model IEnumerable<Tienda_Benito.Models.Ventum>

@{
    ViewData["Title"] = "Ventas";
    var paginaActual = ViewBag.PaginaActual as int? ?? 1;
    var tamanoPagina = ViewBag.TamanoPagina as int? ?? 5;
    var totalPaginas = ViewBag.TotalPaginas as int? ?? 1;
}

<h1 class="mb-4">ğŸ“¦ Historial de Ventas</h1>

<!-- ğŸ”½ Selector de cantidad por pÃ¡gina -->
<form method="get" class="form-inline mb-3">
    <label class="mr-2">Mostrar:</label>
    <select name="tamPagina" class="form-control mr-2" onchange="this.form.submit()">
        <option value="5" selected="@(tamanoPagina == 5)">5</option>
        <option value="10" selected="@(tamanoPagina == 10)">10</option>
        <option value="15" selected="@(tamanoPagina == 15)">15</option>
    </select>
    <input type="hidden" name="pagina" value="@paginaActual" />
</form>

<p>
    <a asp-action="Create" class="btn btn-success">
        â• Nueva Venta
    </a>
</p>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th>ğŸ—“ Fecha</th>
            <th>ğŸ’° Total</th>
            <th>ğŸ§¾ Tipo</th>
            <th>ğŸ‘¤ Vendedor</th>
            <th>ğŸ§ Cliente</th>
            <th class="text-center">âš™ï¸ Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.Total.ToString("C")</td>
                <td>@item.TipoVenta</td>
                <td>@item.Usuario?.Email</td>
                <td>@item.Cliente?.Nombre @item.Cliente?.Apellido</td>
                <td class="text-center">
                    <a asp-action="DetalleVue" asp-route-id="@item.VentaId" class="btn btn-info btn-sm">ğŸ” Ver</a>

                    @if (!item.Anulada)
                    {
                        <form asp-action="Anular" asp-route-id="@item.VentaId" method="post" style="display:inline;" onsubmit="return confirm('Â¿EstÃ¡ seguro que desea anular esta venta?');">
                            <button type="submit" class="btn btn-warning btn-sm">ğŸš« Anular</button>
                        </form>
                    }
                    else
                    {
                        <span class="badge bg-danger">Anulada</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- ğŸ”¢ PaginaciÃ³n con flechas -->
@if (totalPaginas > 1)
{
    <nav>
        <ul class="pagination justify-content-center">
            <!-- Primera pÃ¡gina -->
            <li class="page-item @(paginaActual == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { pagina = 1, tamPagina = tamanoPagina })">Â«</a>
            </li>
            <!-- PÃ¡gina anterior -->
            <li class="page-item @(paginaActual == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { pagina = paginaActual - 1, tamPagina = tamanoPagina })">â€¹</a>
            </li>

            <!-- PÃ¡ginas alrededor de la actual -->
            @for (int i = Math.Max(1, paginaActual - 2); i <= Math.Min(totalPaginas, paginaActual + 2); i++)
            {
                <li class="page-item @(i == paginaActual ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { pagina = i, tamPagina = tamanoPagina })">@i</a>
                </li>
            }

            <!-- PÃ¡gina siguiente -->
            <li class="page-item @(paginaActual == totalPaginas ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { pagina = paginaActual + 1, tamPagina = tamanoPagina })">â€º</a>
            </li>
            <!-- Ãšltima pÃ¡gina -->
            <li class="page-item @(paginaActual == totalPaginas ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { pagina = totalPaginas, tamPagina = tamanoPagina })">Â»</a>
            </li>
        </ul>
    </nav>
}
