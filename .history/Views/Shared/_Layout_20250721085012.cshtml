@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tienda Benito</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">Tienda Benito</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" href="/Cliente">Clientes</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Producto">Productos</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Venta">Ventas</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Proveedor">Proveedores</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Usuario">Usuarios</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Home/Reportes">Informes</a></li>
                    </ul>

                    <ul class="navbar-nav">
                        @if (HttpContextAccessor.HttpContext.Session.GetString("Nombre") != null)
                        {
                            <li class="nav-item">
                                <span class="navbar-text text-white me-3">
                                    <i class="bi bi-person-circle"></i> @HttpContextAccessor.HttpContext.Session.GetString("Nombre")
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" href="/Cuenta/Logout"><i class="bi bi-box-arrow-right"></i> Cerrar sesión</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" href="/Cuenta/Login"><i class="bi bi-box-arrow-in-right"></i> Iniciar sesión</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container mt-4">
        @RenderBody()
    </main>

    <footer class="bg-dark text-white text-center py-3 mt-4">
        <div class="container">
            &copy; @DateTime.Now.Year - Tienda Benito
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
