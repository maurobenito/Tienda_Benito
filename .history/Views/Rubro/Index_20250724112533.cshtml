@model IEnumerable<Tienda_Benito.Models.Rubro>

@{
    ViewData["Title"] = "Listado de Rubros";
    var filtro = ViewBag.Filtro as string ?? "";
}

<h1>Rubros</h1>

<form method="get" class="mb-3">
    <input name="filtro" value="@filtro" placeholder="Buscar por nombre..." class="form-control" />
</form>

<p><a asp-action="Create" class="btn btn-primary">➕ Nuevo Rubro</a></p>

<table class="table table-bordered table-striped table-hover shadow-sm">
    <thead class="thead-dark text-center">
        <tr>
            <th>Nombre</th>
            <th style="width: 150px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nombre</td>
                <td class="text-center text-nowrap">
                    <a asp-action="Edit" asp-route-id="@item.RubroId" class="btn btn-sm btn-warning" title="Editar">✏️</a>
                    <a asp-action="Delete" asp-route-id="@item.RubroId" class="btn btn-sm btn-danger" title="Eliminar" onclick="return confirm('¿Está seguro que desea eliminar este rubro?');">🗑️</a>
                </td>
            </tr>
        }
    </tbody>
</table>
